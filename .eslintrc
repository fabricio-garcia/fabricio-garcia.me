{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "plugins": ["prettier"],
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "jsx-quotes": [2, "prefer-single"],
    "no-console": "off",
    "no-inline-comments": "off",
    "no-unused-vars": "warn",
    "prettier/prettier": ["error"],
    "quotes": [2, "single", { "avoidEscape": true }],
    "react/jsx-filename-extension": 0,
    "semi": ["error", "always"]
  }
}